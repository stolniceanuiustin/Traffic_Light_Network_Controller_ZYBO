<routes>
    <!-- 
    Definition for cars (passenger class)
    These types are referenced by the randomTrips command for car_routes.rou.xml
    -->
    <vType id="car" vClass="passenger" 
           accel="3.0" decel="6.0" 
           sigma="0.5" length="5.0" 
           minGap="2.5" maxSpeed="50.0" 
           color="1,0,0"/> <!-- Red color for cars -->

    <!-- 
    Definition for buses (bus class)
    These types are referenced by the randomTrips command for bus_routes.rou.xml
    Buses are typically longer and have a lower max speed.
    -->
    <vType id="bus" vClass="bus" 
           accel="2.0" decel="4.0" 
           sigma="0.5" length="12.0" 
           minGap="3.0" maxSpeed="40.0" 
           color="1,0,1"/> <!-- Magenta color for buses -->
</routes>